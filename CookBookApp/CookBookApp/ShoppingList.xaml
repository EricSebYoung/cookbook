<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBookApp.ShoppingList" Title="Shopping List">
    <ContentPage.Content>
        <ListView x:Name="listView" Margin="20" ItemSelected="OnListItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="20,0,0,0" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding itemAmou}" VerticalTextAlignment="Center" />
                            <Label Text="{Binding itemMeas}" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                            <Label Text="{Binding itemName}" VerticalTextAlignment="Center" TextDecorations="Underline"/>
                            <Label Text="X" VerticalTextAlignment="Center" HorizontalOptions="End" IsVisible="{Binding itemChecked}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Footer>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Clear Checked Items" Clicked="OnClear" />
                </StackLayout>
            </ListView.Footer>
        </ListView>
    </ContentPage.Content>
</ContentPage>