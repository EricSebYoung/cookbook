<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CookBookApp.AddRecipe" Title="Add Recipe">
    <ScrollView>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Name" />
            <Entry Text="{Binding recipeName}" />
            <Label Text="Ingredients" />
            <StackLayout x:Name="Ingredients">
            </StackLayout>
            <StackLayout Spacing="0" Orientation="Horizontal" HorizontalOptions="Start">
                <Button Text="+ Ingredient" Clicked="OnItemAdded" />
                <Button Text="- Ingredient" Clicked="OnItemRemoved" x:Name="removeIngredient" />
            </StackLayout>
            <Label Text="Directions" />
            <Editor Text="{Binding recipeDirections}" AutoSize="TextChanges"/>
            <Label Text="Image" />
            <Button Text="Choose a File..." Clicked="OnImageClicked"></Button>
            <Label Text="" x:Name="ImageFile"/>
            <StackLayout x:Name="ShowImage">
                <!-- Defined Dynamically in code behind -->
            </StackLayout>
            <Button Text="Save" Clicked="OnSaveClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>