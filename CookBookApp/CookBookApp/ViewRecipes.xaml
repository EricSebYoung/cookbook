<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CookBookApp.ViewRecipes" Title="Your Cookbook">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Check Shopping List" Order="Secondary" Clicked="OnShoppingList">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Android, UWP," Value="list.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem Text="Add Recipe" Clicked="OnItemAdded">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Android, UWP" Value="plus.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem Text ="Edit Recipe" Order="Secondary" Clicked="OnItemEdit" x:Name="EditTool"/>
        <ToolbarItem Text ="Delete Recipe" Order="Secondary" Clicked="OnItemDelete" x:Name="DeleteTool"/>

    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout>
            <Label Text="Select Items to Delete" IsVisible="False" HorizontalOptions="Center" VerticalOptions="Start" x:Name="DeleteLabel"/>
            <Label Text="Select Items to Edit" IsVisible="False" HorizontalOptions="Center" VerticalOptions="Start" x:Name="EditLabel"/>
            <FlexLayout x:Name="RecipesView" Wrap="Wrap" JustifyContent="Start" AlignItems="Center" AlignContent="Start">
            </FlexLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
