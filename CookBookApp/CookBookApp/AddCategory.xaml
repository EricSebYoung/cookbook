<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CookBookApp.AddCategory" Title="Add Category">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Name" />
        <Entry Text="{Binding categoryName}" />
        <Label Text="Image" />
        <Button Text="Choose a File..." Clicked="OnImageClicked"></Button>
        <Label Text="" x:Name="ImageFile"/>
        <StackLayout x:Name="ShowImage">
            <!-- Defined Dynamically in code behind -->
        </StackLayout>
        <Button Text="Save" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>