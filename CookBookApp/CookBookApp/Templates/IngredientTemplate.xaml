<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBookApp.IngredientTemplate">
    <ContentView.Content>
        <TableView>
            <TableView.HeightRequest>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android">175</On>
                    <On Platform="UWP">230</On>
                </OnPlatform>
            </TableView.HeightRequest>
            <TableRoot>
                <TableSection>
                    <EntryCell Label="Ingred. Name " Text="{Binding ingredientName}"/>
                    <EntryCell Label="Ingred. Amount " Text="{Binding ingredientAmou}"/>
                    <EntryCell Label="Ingred. Measurement " Text="{Binding ingredientMeas}"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentView.Content>
</ContentView>